<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1"/>

  <title>Dev Hub</title>

  <link rel="styelsheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css">
  <link type="text/css" rel="stylesheet" href="../public/css/style.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
</head>
<body>
  <nav class = "indigo">
    <div class="nav-wrapper">
      <a href="#!" class="brand-logo">Dev Hub</a>
      <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>

      <ul class="right hide-on-med-and-down">
        <li><a href="sass.html">Developers</a></li>
        <li><a href="badges.html">Companies</a></li>
        <li><a href="collapsible.html">About Us</a></li>
      </ul>

      <ul class="side-nav" id="mobile-demo">
        <li><a href="sass.html">Developers</a></li>
        <li><a href="badges.html">Companies</a></li>
        <li><a href="collapsible.html">About Us</a></li>
      </ul>
    </div>
  </nav>

  <h2>Companies</h2>
    <% companies.forEach( company => { %>
      <div class="card xl">
        <div class="card-image waves-effect waves-block waves-light">
           <div class="card-sizer">
             <img class="activator" src=" <%= company.image %> ">
           </div>
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%= company.name %><i class="material-icons right">more_vert</i></span>
          <p>
          <strong> Industry: </strong> <%= company.industry %>
          <br>
          <strong> Stack: </strong> <%= company.stack %>
          </p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4"><%= company.name %><i class="material-icons right">close</i></span>
          <ul>
            <!-- <li><strong> Name: </strong> <%= company.name %> </li> -->
            <!-- <li><strong> Image: </strong> <%= company.image %> </li> -->
            <li><strong> Industry: </strong> <%= company.industry %> </li>
            <li><strong> Description: </strong> <%= company.description %> </li>
            <li><strong> Stack: </strong>

            </li>
            <li><strong> Jobs: </strong> <%= company.jobs %> </li>
          </ul>
        </div>
      </div>
    <% }) %>
  <br>

  <footer class="page-footer indigo">
    <div class="container">
      <div class="row">
        <h6 class="white-text center bold">Company</h6>
        <ul class="center">
          <li><a class="grey-text text-lighten-3" href="#!">API</a></li>
          <li><a class="grey-text text-lighten-3" href="#!">Careers</a></li>
          <li><a class="grey-text text-lighten-3" href="#!">Our Stack</a></li>
          <li><a class="grey-text text-lighten-3" href="#!">Contact Us</a></li>
        </ul>
      </div>
    </div>

    <div class="footer-copyright">
      <div class="container">
      Â© 2016 Copyright DevHub
      <!-- <a class="grey-text text-lighten-4 right" href="#!">More Links</a> -->
      </div>
    </div>
  </footer>


  <!-- jQuery is required by Materialize to function -->
  <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.js"></script>
  <script type="text/javascript">
    $(document).ready(function(){
    // Activate the side menu
    $(".button-collapse").sideNav();
});
  </script>

</body>
</html>
