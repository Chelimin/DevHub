      <input type="text" class="form-control" name="School" placeholder="Name of School">
  </div>
  <div>
      <input type="text" class="form-control" name="Position 1" placeholder="Position">
  </div>
  <div>
      <input type="text" class="form-control" name="Company 1" placeholder="Company Name">
  </div>
  <div>
