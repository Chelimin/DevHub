  </div>
  <div>
      <input type="text" class="form-control" name="Company 2" placeholder="Company Name">
  </div>
  <div>
      <input type="text" class="form-control" name="Position 3" placeholder="Position">
  </div>
  <div>
      <input type="text" class="form-control" name="Company 3" placeholder="Company Name">
  </div>

  <div class="form-group col-md-4">
    <button type="submit" class="btn btn-primary col-md-12">Submit</button>
  </div>

  </form>
