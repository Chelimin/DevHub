<form method="POST" action=<%= "/users/" + user.github.username + "?_method=PUT" %>>


  <div class="container">

  <!-- Work Experience -->
<h5>Work Experience</h5>
<br>
  <div class="input-field col s6">
    <input placeholder="Company Name" name="company" type="text" class="valnameate">
    <label for="workExp[name]">Most recent company:</label>
  </div>
  <div class="input-field col s6">
    <input placeholder="Position" name="position" type="text" class="valnameate" >
    <label for="workExp[position]">Most recent position:</label>
  </div>
  <div class="input-field col s6">
      <input name="start_work" type="date" class="datepicker">
      <label for="workExp[start]">Start Date:</label>
  </div>
  <div class="input-field col s6">
      <input name="end_work" type="date" class="datepicker">
      <label for="workExp[end]">End Date:</label>
  </div>
  <br>

    <!-- Education -->
<h5>Education</h5>
<br>
  <div class="input-field col s6">
      <input placeholder="School Name" name="school" type="text" class="valnameate" >
      <label for="education[school]">Most recent school:</label>
  </div>
  <div class="input-field col s6">
      <input placeholder="Course Name" name="course" type="text" class="valnameate" >
      <label for="education[course]">Most recent course:</label>
  </div>
  <div class="input-field col s6">
      <input name="start_edu" type="date" class="datepicker">
      <label for="education[start]">Start Date:</label>
  </div>
  <div class="input-field col s6">
      <input name="end_edu" type="date" class="datepicker">
      <label for="education[end]">End Date:</label>
  </div>
  <br>

  <div class="form-group col-md-4">
    <button type="submit" class="btn btn-primary col-md-12">Edit</button>
  </div>

</div>
<script>
$('.datepicker').pickadate({
 selectMonths: true,
 selectYears: 15
})
</script>
</form>
