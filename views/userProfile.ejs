<h2>My Profile</h2>

<% if (currentUser) { %>
  <h3>User is logged in!</h3>
  <%= currentUser %>
  <a href="/logout">Logout</a>
  <% } %>

  <div class="container">
          <ul>
          <li><b>Username : </b> <%= user[i].username %></li>
          <li><b>Company: </b> <%= user[i].company %></li>
          <li><b>Blog: </b> <%= user[i].blog %></li>
          <li><b>Bio: </b> <%= user[i].bio %></li>
          <li><b>Avatar_url: </b> <%= user[i].avatar_url %></li>
          <li><b>Languages: </b> <%= user[i].languages %></li>
          <li><b>Home Page: </b> <%= user[i].html_url %></li>
          <li><b>Location: </b> <%= user[i].location %></li>
          <li><b>Followers: </b> <%= user[i].followers %></li>
          <li><b>Hireable: </b> <%= user[i].hireable %></li>
          </ul>
        <%-link_to('Edit Education and Work Experience', '/edit')%>
  </div>

<!-- Activity line chart -->
<h3>My activity</h3>
<div class ="container">
  <div id="myDiv" style="width: 480px; height: 400px;">
  </div>
  <script>
  var data = [
    {
    x: ['2013-10-04 22:23:00', '2013-11-04 22:23:00', '2013-12-04 22:23:00'],
